@page
@model Labs.UI.Areas.Admin.Pages.EditModel

@{
    ViewData["Title"] = "Редактирование товара";
}

<div class="container mt-4 mb-5">
    <div class="card shadow-sm mx-auto" style="max-width: 600px;">
        <div class="card-body">
            <h4 class="card-title mb-4">Редактирование товара</h4>

            <form method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="PetFood.Id" />
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="PetFood.Name" class="form-label">Название</label>
                    <input asp-for="PetFood.Name" class="form-control" />
                    <span asp-validation-for="PetFood.Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PetFood.Description" class="form-label">Описание</label>
                    <input asp-for="PetFood.Description" class="form-control" />
                    <span asp-validation-for="PetFood.Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PetFood.Price" class="form-label">Цена (€)</label>
                    <input asp-for="PetFood.Price" class="form-control" />
                    <span asp-validation-for="PetFood.Price" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PetFood.CategoryId" class="form-label">Категория</label>
                    <select asp-for="PetFood.CategoryId" class="form-select" asp-items="ViewBag.CategoryId"></select>
                </div>

                <div class="mb-3">
                    <label asp-for="Image" class="form-label">Изображение</label>
                    <input asp-for="Image" type="file" class="form-control" />
                </div>

                @if (!string.IsNullOrEmpty(Model.PetFood.Image))
                {
                    <div class="mb-4">
                        <label class="form-label">Текущее изображение:</label><br />
                        <img src="@Model.PetFood.Image" alt="Preview" class="img-thumbnail" style="max-height: 200px;" />
                    </div>
                }

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">Сохранить</button>
                    <a asp-page="Index" class="btn btn-secondary">Отменить</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
